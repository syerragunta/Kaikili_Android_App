<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim4"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <ImageView

        android:layout_width="match_parent"
        android:layout_height="@dimen/extra_padding_x100"
        android:background="@drawable/box_full_radius_bg"
        android:src="@drawable/ic_add_photo_black_24dp"
        android:id="@+id/row_add_image_iv"/>

    <ImageView
        android:layout_gravity="right"
        android:padding="@dimen/dim2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_delete"
        android:id="@+id/row_add_image_iv_delete"
        />

</FrameLayout>