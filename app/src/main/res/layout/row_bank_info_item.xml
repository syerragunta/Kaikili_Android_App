<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="@dimen/dim2"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.sit.kaikiliService.font.TextViewEuphemiaUCASRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Chase Debit Card"
            android:textColor="@color/black_87"
            android:textSize="@dimen/fontsize16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:src="@drawable/visa"/>
                <com.sit.kaikiliService.font.TextViewEuphemiaUCASRegular
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dim10"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="XXXX XXXX XXXX 1234"
                    android:textColor="@color/black_54"
                    android:textSize="@dimen/fontsize18" />

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_arrow_right"/>



    </LinearLayout>




</LinearLayout>