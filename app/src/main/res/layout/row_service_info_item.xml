<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/row_add_service_item_ll_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.sit.kaikiliService.font.TextViewEuphemiaUCASRegular
            android:id="@+id/row_service_info_item_tv_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Int Wall Painting 2500/$0.25"
            android:textColor="@color/black_87"
            android:textSize="@dimen/fontsize16"
            android:gravity="left"
            />
        <com.sit.kaikiliService.font.TextViewEuphemiaUCASRegular
            android:id="@+id/row_service_info_item_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$625.00"
            android:textColor="@color/black_87"
            android:textSize="@dimen/fontsize16"
            android:gravity="center"
            />

    </LinearLayout>
</LinearLayout>